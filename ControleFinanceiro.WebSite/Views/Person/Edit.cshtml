@model             PersonViewModel

@{
    ViewData["Title"] = $"Editar {PersonViewModel.ObjectName}";
}

<h4>Editar @PersonViewModel.ObjectName</h4>

<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label my-2"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label my-2">
                    <input class="form-check-input" asp-for="Main" /> @Html.DisplayNameFor(model => model.Main)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label my-2">
                    <input class="form-check-input" asp-for="Inactive" /> @Html.DisplayNameFor(model => model.Inactive)
                </label>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="float-end">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
