@model ControleFinanceiro.WebSite.Models.CreditCardViewModel

@{
    ViewData["Title"] = $"Novo {CreditCardViewModel.ObjectName}";
}

<h4>Criar @CreditCardViewModel.ObjectName</h4>

<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Name" class="control-label my-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label asp-for="DueDay" class="control-label my-2"></label>
            <div class="col-md-3">
                <input asp-for="DueDay" class="form-control" />
                <span asp-validation-for="DueDay" class="text-danger"></span>
            </div>
            <label asp-for="ClosingDays" class="control-label my-2"></label>
            <div class="col-md-3">
                <input asp-for="ClosingDays" class="form-control" />
                <span asp-validation-for="ClosingDays" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label my-2">
                    <input class="form-check-input" asp-for="Inactive" /> @Html.DisplayNameFor(model => model.Inactive)
                </label>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="float-end">Voltar à lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
